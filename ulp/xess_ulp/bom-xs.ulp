        }
        dlgHBoxLayout {
            dlgStretch(1);
            dlgPushButton("+Ok") dlgAccept();
            dlgPushButton("-Cancel") dlgReject();
        }
    };
    if (result) {
        for (int f = 0; f < Fields; f++)
        Data[f] = StripWhiteSpace(Data[f]);
        Database[Entry] = strjoin(Data, DatabaseSeparator);
        DatabaseModified = 1;
        GenerateList();
    }
}

