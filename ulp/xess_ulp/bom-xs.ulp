string StripWhiteSpace(string s)
{
    while (s && isspace(s[0]))
    s = strsub(s, 1);
    while (s && isspace(s[strlen(s) - 1]))
    s = strsub(s, 0, strlen(s) - 1);
    return s;
}

void CollectPartData(void)
{
    NumParts = 0;

    schematic(SCH) {
        SCH.parts(P) {
            if (P.device.package) {
                PartName[NumParts] = P.name;
                PartValue[NumParts] = P.value;
                PartPrefix[NumParts] = P.device.prefix;
                PartDevice[NumParts] = P.device.name;
                PartPackage[NumParts] = P.device.package.name;
                PartHeadline[NumParts] = P.device.headline;
                PartDescription[NumParts] = P.device.description;
                PartValueOn[NumParts] = P.device.value == "On";
                PartManf[NumParts] = P.attribute["MANF"];
                PartManfNumber[NumParts] = P.attribute["MANF#"];
                PartMouserNumber[NumParts] = P.attribute["MOUSER#"];
                PartDigikeyNumber[NumParts] = P.attribute["DIGIKEY#"];
                PartDigikeyNumbers[NumParts] = P.attribute["DIGIKEY#S"]; /* Added for multi-value part define */
                NumParts++;
            }
        }
    }
}

string DatabaseHeader(void)
{
    string s;

    if (Database[0]) {
        string a[];
        int n = strsplit(a, Database[0], DatabaseSeparator);
        int i;
        for (i = 1; i < n; i++) {
            s += "\t" + a[i];
            DatabaseFields[i - 1] = a[i];
        }
        DatabaseFields[i - 1] = "";
    }
    return s;
}

string DatabaseKey(int i)
{
    string key = PartValue[i];
    if (PartValueOn[i])
    key = PartDevice[i] + ValueSeparator + key;
    return key;
}

string DatabaseLookup(string key, int f)
{
    return lookup(Database, key, DatabaseFields[f], DatabaseSeparator);
}

/* Added for multi-value part support */
string GetDigiKeyEntryByValue(string PartNumbersEntries, string Value, string PartManf) {
	string part_number_array[];
	int number_of_parts = strsplit(part_number_array, PartNumbersEntries, '|');
	
	string PartNumberListEntry_Sections[];
	string iPartValue, iPartManfNumber, iPartNumber;
	for (int i=0; i<number_of_parts; i++) {
		int part_entry_total_sections = strsplit(PartNumberListEntry_Sections, part_number_array[i], ':');
		iPartValue      = PartNumberListEntry_Sections[0]; // Case sensitive for value cases like 10m vs 10M
		iPartManfNumber = PartNumberListEntry_Sections[1];
		iPartNumber     = PartNumberListEntry_Sections[2];
		if (iPartValue == Value) {
			if ((part_entry_total_sections > 3) && (PartNumberListEntry_Sections[3])) { // Might not be set
				PartManf = PartNumberListEntry_Sections[3];
			}
			return iPartManfNumber+":"+iPartNumber+":"+PartManf;
		}
	}
	return "";
}

/* Added for multi-value part support */
string GetDigikeyInfo(string PartManf, string PartManfNumber, string PartNumber, string PartValue, string PartNumbersEntries) {
	// PartNumbersEntries format:
	// Value1:ManufacturerPartNumber1:DigikeyPartNumber1|Value2:ManufacturerPartNumber2:DigikeyPartNumber2|...
	// Return Format
	// ManufacturerPartNumber:DigikeyPartNumber:Manufacturer
	if (PartNumber == "USE_DIGIKEY#S") {
		string DigiKeyEntry = GetDigiKeyEntryByValue(PartNumbersEntries, PartValue, PartManf);
		string dikigey_entry_array[];
		int number_of_parts = strsplit(dikigey_entry_array, DigiKeyEntry, ':');
		PartManfNumber   = dikigey_entry_array[0];
		PartNumber       = dikigey_entry_array[1];
		PartManf         = dikigey_entry_array[2];
	}
	return PartManfNumber+":"+PartNumber+":"+PartManf;
}


void GeneratePartList(void)
{
    int NumLines = 0;
	string CurrentDigikeyinfo, CurrentPartManf, CurrentPartManfNumber, CurrentDigikeyPartNumber;
	string dikigey_entry_array[];

    //XXX column sequence?
    Lines[NumLines++] = "Part\tValue\tDevice\tPackage\tManufacturer\tPart#\tDescription" + DatabaseHeader();
    for (int i = 0; i < NumParts; i++) {
	
		CurrentPartManfNumber    = PartManfNumber[i];
		CurrentPartManf          = PartManf[i];
		CurrentDigikeyPartNumber = PartDigikeyNumber[i];
		if (PartManfNumber[i] == "USE_DIGIKEY#S") {
			CurrentDigikeyinfo = GetDigikeyInfo(PartManf[i], PartManfNumber[i], PartDigikeyNumber[i], PartValue[i], PartDigikeyNumbers[i]);
			int number_of_parts = strsplit(dikigey_entry_array, CurrentDigikeyinfo, ':');
			CurrentPartManfNumber    = dikigey_entry_array[0];
			CurrentDigikeyPartNumber = dikigey_entry_array[1];
			CurrentPartManf          = dikigey_entry_array[2];
		}

        Lines[NumLines] = PartName[i] + "\t" + PartValue[i] + "\t" + PartDevice[i] + "\t" + PartPackage[i] + "\t" + CurrentPartManf + "\t" + CurrentPartManfNumber + "\t" + PartHeadline[i];
        if (Database[0]) {
            string key = DatabaseKey(i);
            for (int f = 0; DatabaseFields[f]; f++)
            Lines[NumLines] += "\t" + DatabaseLookup(key, f);
            Lines[NumLines] += "\t" + key; // hidden field!
        }
        NumLines++;
    }
    Lines[NumLines] = "";
}

void GenerateValueList(void)
{
    int NumLines = 0;
    int Index[];

    //XXX column sequence?
    Lines[NumLines++] = "Qty\tValue\tDevice\tParts" + DatabaseHeader();
    sort(NumParts, Index, PartValue, PartDevice, PartName);
    for (int n1 = 0, n2 = 0; ++n2 <= NumParts; ) {
        int i1 = Index[n1];
        if (n2 < NumParts) {
            int i2 = Index[n2];
            //XXX value on/off?
            if (PartValue[i1] == PartValue[i2] && PartDevice[i1] == PartDevice[i2])//XXX  && lname[i1] == lname[i2])
            continue;
        }
        string Quantity;
        sprintf(Quantity, "%d", (n2 - n1) * BuildQty);
        Lines[NumLines] = Quantity + "\t" + PartValue[i1] + "\t" + PartDevice[i1] + "\t";
        for (;;) {
            Lines[NumLines] += PartName[i1];
            if (++n1 < n2) {
                i1 = Index[n1];
                Lines[NumLines] += ", ";
            }
            else
            break;
        }
        if (Database[0]) {
            string key = DatabaseKey(i1);
            for (int f = 0; DatabaseFields[f]; f++)
            Lines[NumLines] += "\t" + DatabaseLookup(key, f);
            Lines[NumLines] += "\t" + key; // hidden field!
        }
        NumLines++;
    }
    Lines[NumLines] = "";
}

