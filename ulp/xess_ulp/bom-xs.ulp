int ReadDatabase(string FileName)
{
    string data;
    if (fileread(data, FileName) > 0) {
        strsplit(Database, data, '\n');
        DatabaseSeparator = (strchr(Database[0], '\t') > -1) ? '\t' : ';';
        DatabaseFile = FileName;
        return 1;
    }
    return 0;
}

